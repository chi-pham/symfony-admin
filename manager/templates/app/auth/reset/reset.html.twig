{% extends 'auth.html.twig' %}

{% block title %}{{ 'Password Reset'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {% include '_flashes.html.twig' %}
                        <h2>{{ 'Password Reset'|trans }}</h2>
                        <p class="text-muted">{{ 'Enter new password and click the button'|trans }}</p>
                        {{ form_start(form) }}
                        <div class="input-group mb-3">
                            <div class="input-group-prepend"><span class="input-group-text">
                        <i class="fas fa-lock"></i></span></div>
                            {{ form_widget(form.password, {'attr': {'placeholder': 'New Password'}}) }}
                            {{ form_errors(form.password) }}
                        </div>
                        <button type="submit" class="btn btn-block btn-primary">{{ 'Reset'|trans }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
